<nav id="nav" class="c-primary-nav {{ styleModifier }}">

    <ul class="c-primary-nav__list">

        {{# primaryNav }}
        <li class="c-primary-nav__item">

            <a href="{{ url }}" class="c-link c-link--block c-link--primary
                c-primary-nav__link {{ class }}">
                {{# signal }}
                    <span class="c-primary-nav__signal"></span>
                {{/ signal }}
                <span class="u-hidden-until@desktop">{{ label }}</span>
                <span class="u-hidden-from@desktop">{{ shortLabel }}</span>
                {{# hasDropdown }}<span class="u-ic-keyboard_arrow_down"></span>{{/ hasDropdown }}
            </a>

            {{# hasDropdown }}
            <ul class="c-primary-nav__dropdown">
                {{# dropdown }}
                <li class="c-primary-nav__dropdown__item u-text-center">
                    <a class="c-link c-link--block c-link--primary u-truncate {{ class }}" href="{{ url }}">
                        {{ label }}
                    </a>
                </li>
                {{/ dropdown }}
                {{# livestream }}
                    {{> molecules-livestream-dropdown }}
                {{/ livestream }}
            </ul>
            {{/ hasDropdown }}

        </li>
        {{/ primaryNav }}

    </ul><!--end c-primary-nav__list-->

</nav><!--end c-primary-nav-->
