{{> organisms-header }}
<main role="main">

    {{# slider }}
    <section>
	   {{> organisms-slider }}
    </section>
    {{/ slider }}

    <section class="o-wrapper u-margin-top">
        {{> organisms-promo-list }}
    </section>

    <section class="o-wrapper u-spacer-top">

        {{# newVideosList }}
            {{> organisms-medialist:u-hidden@from-tablet }}
        {{/ newVideosList }}

        <div class="o-layout o-layout--large u-hidden@until-tablet">
            <div class="o-layout__item u-1/3@desktop u-1/2@tablet u-1/1">
                {{# popularVideosList }}
                    {{> organisms-medialist }}
                {{/ popularVideosList }}
            </div>
            <div class="o-layout__item u-1/3@desktop u-1/2@tablet u-hidden@until-tablet">
                {{# newSeriesList }}
                    {{> organisms-medialist }}
                {{/ newSeriesList }}
            </div>
            <div class="o-layout__item u-1/3 u-hidden@until-desktop">
                {{# devotionalVideosList }}
                    {{> organisms-medialist }}
                {{/ devotionalVideosList }}
            </div>
        </div>
    </section>

    {{# quoteslider }}
    <section class="c-section c-section--bg u-spacer-top">
       {{> organisms-quote-slider }}
    </section>
    {{/ quoteslider }}

    <section class="o-wrapper u-spacer-top">
        <h2><a href="#">Artikel</a></h2>
        {{> organisms-article-grid }}
    </section>

    <section class="c-section c-section--bg u-spacer-top">
       {{> organisms-newsletter-form }}
    </section>

</main>
{{> organisms-footer }}
