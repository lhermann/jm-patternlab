<div class="c-slide {{ styleModifier }}" style="background-image: url('{{background}}')">
    <a href="{{url}}" class="c-slide__link"></a>

    {{^ joelmedia }}

        <div class="c-slide__body">

            <h1 class="u-margin-bottom-none">{{ heading }}</h1>
            <p class="u-lead u-muted">{{{ text }}}</p>
            <button class="c-btn c-btn--tertiary c-slide__btn">{{ button }} <span class="u-ic-arrow-forward"></span></button>

        </div>

    {{/ joelmedia }}
    {{# joelmedia }}

        <div class="o-wrapper c-slide__hero u-height-100">
            <div class="o-layout o-layout--large u-height-100">
                <div class="o-layout__item u-2/3 u-height-100">

                    <div class="u-orient u-orient--middle u-orient--center u-height-100">
                        <div class="c-slide__hero__body">

                            {{> atoms-logo:c-logo--hero }}
                            <h1 class="u-margin-bottom-none">Joel Media Ministry e.V.</h1>
                            <p class="u-muted"><small>... das ewige Evangelium f√ºr Stuttgart, Deutschland und die Welt</small></p>

                            <p class="u-lead u-muted">{{{ text }}}</p>

                            <button class="c-btn c-btn--tertiary c-slide__btn">{{ button }} <span class="u-ic-arrow-forward"></span></button>

                            </div>

                        </div>
                    </div>

                <div class="o-layout__item u-1/3 u-height-100">

                    <div class="c-slide__hero__medialist u-orient u-orient--middle u-height-100">

                        {{> organisms-medialist }}

                    </div>

                </div>
            </div>
        </div>

    {{/ joelmedia }}

</div>
