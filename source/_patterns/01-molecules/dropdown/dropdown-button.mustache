<button id="{{ id }}" class="c-btn c-btn--dropdown {{ class }} jsDropdownBtn"
    aria-haspopup="true" aria-expanded="false">
    {{{ label }}}
</button>

<ul class="c-dropdown c-dropdown--round u-hidden {{ styleModifier }} jsDropdown"
    aria-labelledby="{{ id }}" {{# placement }}data-placement="{{ placement }}"{{/ placement }}>

    {{# dropdown }}
    <li class="c-dropdown__item {{ class }}">
        {{# url }}<a class="c-link c-link--block c-link--secondary" href="{{ url }}">{{/ url }}
            {{{ label }}}
        {{# url }}</a>{{/ url }}
    </li>
    {{/ dropdown }}

</ul>
