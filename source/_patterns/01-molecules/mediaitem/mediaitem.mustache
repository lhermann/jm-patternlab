<div class="o-media c-mediaitem {{# type }}c-mediaitem--{{ type }}{{/ type }} {{ class }} {{ styleModifier }}" href="{{ url }}">
    <a class="c-mediaitem__link" href="{{ url }}"></a>
    <div class="o-media__img c-mediaitem__img">
        <a class="c-mediaitem__imglink" href="{{ url }}">
            {{# image }}
            <img src="{{ image }}"/>
            {{/ image }}
            {{^ image }}
            <span class="u-ic-folder"></span>
            {{/ image }}
            {{# length }}
            <div class="c-mediaitem__length">
                <div>{{{ length }}}</div>
            </div>
            {{/ length }}
        </a>
    </div>
    <div class="o-media__body c-mediaitem__body">
        <a class="c-mediaitem__title u-truncate" href="{{ url }}">{{ title }}</a>
        <ul class="c-mediaitem__meta u-truncate">
            {{# meta }}
                <li>
                    {{# url }}<a href="{{ url }}">{{ label }}</a>{{/ url }}
                    {{^ url }}{{ label }}{{/ url }}
                </li>
            {{/ meta }}
        </ul>
    </div>
</div>
