<div class="c-slide {{ styleModifier }}" style="background-image: url('{{background}}')">
    <a href="{{url}}" class="c-slide__link"></a>

    {{# content }}
        <div class="c-slide__body">
            {{{ content }}}
        </div>
    {{/ content }}

    {{^ content }}
        <div class="c-slide__body c-slide__body--full">

            <div class="o-wrapper c-slide__hero u-height-100">
                <div class="o-layout o-layout--large u-height-100">
                    <div class="o-layout__item u-2/3 c-slide__hero__content">

                        {{> atoms-logo:c-logo--hero }}
                        <h1 class="u-margin-bottom-none">Joel Media Ministry e.V.</h1>
                        <p class="u-muted"><small>... das ewige Evangelium für Stuttgart, Deutschland und die Welt</small></p>

                        <p class="u-lead u-muted">Wöchentlich neue Videos über die Bibel,<br>Prophetie und Zeitgeschehen</p>

                        <button class="c-btn c-btn--tertiary">Erster Besuch? Hier geht's los <span class="u-ic-arrow-forward"></span></button>

                        </div>

                    <div class="o-layout__item u-1/3 u-height-100">

                        <div class="c-slide__hero__medialist u-height-100">

                            {{> organisms-medialist }}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    {{/ content }}

</div>
