<form class="c-form {{ styleModifier }}" method="post" action="#">
    <div class="c-form__input-with-btn">
        <input class="c-form__input" type="text" name="field" id="field" placeholder="{{placeholder}}"><!--
        --><button class="c-btn c-btn--small c-btn--tertiary c-btn--right c-form__btn" type="submit" for="field" value="Button">
