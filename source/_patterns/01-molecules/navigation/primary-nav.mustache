<nav id="nav" class="c-primary-nav">

	<ul class="c-primary-nav__list">

		{{# primaryNav }}
		<li class="c-primary-nav__item">
            <a href="{{ url }}" class="c-primary-nav__link">
                {{# signal }}<span class="c-primary-nav__signal"></span>{{/ signal }}
                {{ label }} <span class="u-ic-keyboard-arrow-down"></span>
            </a>
            <ul class="c-primary-nav__dropdown">
                {{# dropdown }}
                <li class="c-primary-nav__dropdown__item">
                    <a class="c-primary-nav__link c-primary-nav__link--dropdown" href="{{ url }}">{{ label }}</a>
                </li>
                {{/ dropdown }}
            </ul>
        </li>
		{{/ primaryNav }}

	</ul><!--end c-primary-nav__list-->

</nav><!--end c-primary-nav-->
